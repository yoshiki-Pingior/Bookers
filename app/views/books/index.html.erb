

<h1>Books</h1>

<table>
  <thead>
    <th>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </th>
  </thead>

  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><%= link_to 'Show', "/books/#{book.id}" %> </td>
    <td><%= link_to 'Edit', "/books/#{book.id}/edit" %> </td>
    <td><%= link_to 'Destory', "/books/#{book.id}", method: :delete, "deta-confirm" =>"本当に削除しますか？"%> </td>

  </tr>
  <% end %>
  </tbody>
</table>



<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create Book' %>
<% end %>