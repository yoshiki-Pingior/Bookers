

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
  <tr>
    <td><%= book.title %></td>
    <td><%= book.body %></td>
    <td><a class="show_#{book.id}"><%= link_to 'Show', "/books/#{book.id}" %></a></td>
    <td><a class="show_#{book.id}"><%= link_to 'Edit', "/books/#{book.id}/edit" %></a></td>
    <td><a class="show_#{book.id}"><%= link_to 'Destory', "/books/#{book.id}", method: :delete, "data-confirm" =>"本当に削除しますか？"%></a></td>

  </tr>
  <% end %>
  </tbody>
</table>



<h2>New book</h2>
<div class="new-book">
<%= form_with model:@book, local:true do |f| %>

  <div class="field">
  <div class=book_title>Title</div>
  <%= f.text_field :title %>
  </div>

  <div class="field">
  <div class=book_body>Body</div>
  <%= f.text_area :body %>
  </div>

  <div class="actions">
  <%= f.submit 'Create Book' %>
  </div>
<% end %>

</div>